<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spot_title_margin"
        android:text="?attr/DialogTitleText"
        android:textAppearance="?attr/DialogTitleAppearance" />

    <com.sir.app.base.view.spote.ProgressLayout
        android:id="@+id/progress"
        android:layout_width="@dimen/spot_progress_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spot_progress_margin" />

</LinearLayout>