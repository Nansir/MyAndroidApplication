<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6px"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_userhead"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_margin="10px">

        <com.sir.app.material.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="100px"
            android:layout_height="100px"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="1px" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="5px"
            android:layout_toRightOf="@+id/iv_head"
            android:text="YouTube上的搬运工"
            android:textColor="@color/gold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/iv_head"
            android:text="12分钟前"
            android:textColor="@color/gray"
            android:textSize="10sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:text="@string/infocontent" />


    <GridView
        android:id="@+id/gv_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:numColumns="3"
        android:scrollbars="none"></GridView>

</LinearLayout>